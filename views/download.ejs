<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Download Video</title>
  <link rel="stylesheet" href="styles.css">
</head>

<body>
  <div class="container">
    <h1>Download Video</h1>
    <% if (formats.length === 0) { %>
    <p class="no-formats">No formats available</p>
    <% } else { %>
    <ul>
      <% formats.forEach(format => { %>
      <li>
        <a href="/download/video?url=<%= url %>&quality=<%= format.itag %>">
          <span class="quality"><%= format.qualityLabel %></span>
            <span class="size"><%= format.contentLength ? (format.contentLength / 1048576).toFixed(2) + ' MB' : '' %></span>
       </a>
       </li>
      <% }) %>
    </ul>
    <% } %>
  </div>
</body>

</html>